<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/cust"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/allerta"
                android:text="Name"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/custNamedeliversorder"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:text="custName"
                android:textSize="20sp"/>

            <Space
                android:layout_width="match_parent"
                android:layout_height="10dp" />

            <TextView
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/allerta"
                android:text="Address"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/addressdeliverorder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Address"
                android:layout_marginTop="5dp"
                android:textSize="15sp" />
            <Space
                android:layout_width="match_parent"
                android:layout_height="10dp" />

            <TextView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/allerta"
                android:text="Tracking Number"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/trackingNumdeliveredorder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tracking"
                android:layout_marginTop="10dp"
                android:textSize="15sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/status"
            android:layout_width="109dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:padding="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="Status"
                    android:textSize="18sp"
                    android:layout_gravity="center_horizontal"
                    android:fontFamily="@font/allerta"
                    android:textColor="@color/black"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/statusOrderDetailDeliver"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="Packing"
                    android:layout_gravity="center_horizontal"
                    android:textSize="18sp"
                    android:textColor="@color/link"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/statusBtnDeliver"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="UPDATE"
                    android:layout_marginTop="2dp"
                    android:backgroundTint="@color/link"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:fontFamily="@font/allerta"/>


            </LinearLayout>



        </LinearLayout>





    </LinearLayout>

</androidx.cardview.widget.CardView>