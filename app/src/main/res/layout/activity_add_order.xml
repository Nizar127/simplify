<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/brownish"
    tools:context=".AddOrderActivity">


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/add"
        android:layout_width="213dp"
        android:layout_height="31dp"
        android:layout_marginStart="97dp"
        android:layout_marginLeft="97dp"
        android:layout_marginTop="95dp"
        android:layout_marginEnd="101dp"
        android:layout_marginRight="101dp"
        android:fontFamily="sans-serif-smallcaps"
        android:gravity="center"
        android:text="NEW ORDER"
        android:textColor="#FAFAFA"
        android:textSize="24sp"
        android:textStyle="bold" />



        <EditText
            android:id="@+id/cust_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Name"
            android:inputType="textMultiLine"
            android:padding="20dp"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:textColorLink="@color/white" />

        <EditText
            android:id="@+id/cust_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/cust_name"
            android:layout_marginBottom="10dp"
            android:hint="Phone"
            android:inputType="number"
            android:padding="20dp"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:textColorLink="@color/white" />

        <EditText
            android:id="@+id/cust_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cust_phone"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:hint="Address"
            android:inputType="textMultiLine"
            android:padding="20dp"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:textColorLink="@color/white" />

        <EditText
            android:id="@+id/order_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cust_address"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:hint="Order Date"
            android:inputType="date"
            android:padding="20dp"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:textColorLink="@color/white" />

        <EditText
            android:id="@+id/ship_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/order_date"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:hint="Shipment Date"
            android:inputType="date"
            android:padding="20dp"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:textColorLink="@color/white" />

        <EditText
            android:id="@+id/tracknum"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ship_date"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="30dp"
            android:hint="Tracking Number"
            android:inputType="textMultiLine"
            android:padding="20dp"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:textColorLink="@color/white" />

<Button
    android:id="@+id/addord"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    app:backgroundTint="#FFEB3B"
    android:background="@drawable/btn_bg"
    android:layout_gravity="center_horizontal"
    android:text="Add"
    android:textAllCaps="false"
    android:textColor="@color/brownish"
    android:textColorHighlight="#0FFFFFFF"
    android:textSize="18sp"/>



</LinearLayout>

</ScrollView>